---
import '../styles/globals.css';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer';
import SmoothScroll from '../components/SmoothScroll';
import CustomCursor from '../components/CustomCursor';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'Hirusha Dinil Rubasinghe | Creative Developer & Designer',
  description = 'Creative developer and designer specializing in modern web development with React, Next.js, Node.js, TypeScript etc. Building engaging digital experiences.',
  ogImage = '/og-image.jpg',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Hirusha Dinil Rubasinghe",
  "url": "https://dinilr.com",
  "jobTitle": "Full Stack Developer",
  "sameAs": [
    "https://github.com/lxnid",
    "https://www.linkedin.com/in/hirusha-dinil-rubasinghe-66bbba313/"
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Hirusha Dinil Rubasinghe, Creative Developer, Web Designer, React, Next.js, Node.js, TypeScript, Portfolio, Frontend Developer, Full Stack Developer" />

    <link rel="canonical" href={canonicalURL} />
    <link rel="preload" href="/fonts/ppneuemontreal-medium.otf" as="font" type="font/otf" crossorigin />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Hirusha Dinil Rubasinghe | Creative Developer" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    <title>{title}</title>

    <ViewTransitions />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </head>
  <body class="bg-[#000000] text-[#dddddd]">
    <CustomCursor client:idle />
    <SmoothScroll client:only="react">
      <Navbar client:only="react" />
      <main>
        <slot />
      </main>
    </SmoothScroll>
    <Footer client:visible />
  </body>
</html>
