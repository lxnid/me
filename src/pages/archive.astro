---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArchiveItem from '../components/ArchiveItem';
import { archives } from '../data/ArchiveData';
---

<BaseLayout
  title="Archive | Hirusha Dinil Rubasinghe"
  description="A timeline of my portfolio website iterations, showcasing the evolution of my design and development skills."
>
  <section class="pt-96 pb-20 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-4xl md:text-8xl old uppercase mb-4 text-neutral-100">Site Archive</h1>
      <p class="text-neutral-400 mb-12 max-w-2xl">
        Previous iterations of my portfolio website, each representing a milestone in my development journey.
      </p>
      <div class="divide-y divide-neutral-800">
        {archives.map((archive, index) => (
          <ArchiveItem client:visible archive={archive} index={index} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
