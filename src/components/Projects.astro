---
import { projects } from '../data/projects';
import { generateSlug } from '../utils/slugify';

interface Props {
  count?: number;
}

const { count } = Astro.props;
const displayProjects = count ? projects.slice(0, count) : projects;
---

<section class="py-20 px-6 md:px-12 lg:px-20">
  <div class="flex flex-col gap-8">
    {displayProjects.map((project, index) => (
      <a
        href={`/work/${generateSlug(project.title)}`}
        class="cursor-hover-project group relative block h-[75vh] overflow-hidden rounded-lg"
      >
        <img
          src={`/${project.homepageImage || project.image}`}
          alt={project.title}
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          loading={index === 0 ? 'eager' : 'lazy'}
          width="1920"
          height="1080"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent" />
        <div class="absolute inset-0 bg-black/40 md:opacity-0 md:group-hover:opacity-100 transition-opacity duration-500" />
        <div class="absolute bottom-0 left-0 right-0 p-8">
          <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">{project.title}</h3>
          <p class="text-neutral-300 text-sm md:text-base opacity-0 md:group-hover:opacity-100 transition-opacity duration-500 max-w-2xl">
            {project.headline}
          </p>
        </div>
      </a>
    ))}
  </div>
</section>
