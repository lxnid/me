---
import { getCollection } from 'astro:content';
import BlogCard from './blog/BlogCard';

const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

const sortedPosts = allPosts
  .sort((a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf())
  .slice(0, 3);
---

<section class="py-20 px-6 md:px-12 lg:px-20">
  <div class="max-w-7xl mx-auto">
    <div class="flex items-end justify-between mb-12">
      <div>
        <h2 class="text-3xl md:text-5xl font-medium text-theme-text-primary mb-4">
          Recent Writing
        </h2>
        <p class="text-theme-text-secondary max-w-xl">
          Thoughts on software engineering, building products, and the tools we use.
        </p>
      </div>
      <a 
        href="/blog" 
        class="hidden md:inline-flex items-center gap-2 text-sm uppercase tracking-wider text-theme-accent hover:text-theme-accent-hover transition-colors"
      >
        View All Posts
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {sortedPosts.map((post, index) => (
        <BlogCard client:visible post={post} index={index} />
      ))}
    </div>

    <div class="mt-8 text-center md:hidden">
      <a 
        href="/blog" 
        class="inline-flex items-center gap-2 text-sm uppercase tracking-wider text-theme-accent hover:text-theme-accent-hover transition-colors"
      >
        View All Posts
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
